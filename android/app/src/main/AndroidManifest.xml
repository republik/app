<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="app.republik">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Chromebook Compatibility see: https://developer.android.com/topic/arc#update_your_apps_manifest_file -->
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />
    <application
      android:name="app.republik.MainApplication"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:allowBackup="false"
      android:theme="@style/AppTheme">
      <activity
        android:name="app.republik.MainActivity"
        android:label="@string/app_name"
        android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
        android:launchMode="singleTask"
        android:windowSoftInputMode="adjustResize"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        <intent-filter android:label="@string/app_name" android:autoVerify="true">
          <action android:name="android.intent.action.VIEW" />
          <category android:name="android.intent.category.DEFAULT" />
          <category android:name="android.intent.category.BROWSABLE" />
          <data android:scheme="https" android:host="www.republik.ch" />
          <data android:scheme="https" android:host="republik.ch" />
          <data android:scheme="https" android:host="republik.love" />
        </intent-filter>
      </activity>
      <service
        android:name="com.wix.reactnativenotifications.fcm.FcmInstanceIdListenerService"
        android:exported="true">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT" />
        </intent-filter>
		  </service>
      <meta-data
        android:name="com.google.firebase.messaging.default_notification_icon"
        android:resource="@drawable/notification_icon" />
      <meta-data android:name="com.google.firebase.messaging.default_notification_color"
        android:resource="@color/primary_dark" />
    </application>
    <!-- Required for external links to open in webview
    ref: https://reactnative.dev/docs/linking#canopenurl
     -->
    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https"/>
            <category android:name="android.intent.category.DEFAULT" />
            <!-- The BROWSABLE category is required to get links from web pages. -->
            <category android:name="android.intent.category.BROWSABLE" />
        </intent>
        <intent>
            <action android:name="android.intent.action.SENDTO" />
            <data android:scheme="mailto"/>
        </intent>
    </queries>
      <!-- Specifying the app packages below is necessary for links in our
      articles to open, if a user has an app installed that captures the 
      deep link. This became necessary because Google didn't allow our 
      app to query_all_packages via uses-permission -->
    <queries>
      <package android:name="com.google.android.youtube" />
      <package android:name="com.phonegap.tagesanzeiger" />
      <package android:name="ch.nzz.mobile" />
      <package android:name="com.nytimes.android" />
      <package android:name="com.twitter.android" />
      <package android:name="ch.srf.mobile" />
      <package android:name="ch.iAgentur.i20Min" />
      <package android:name="ch.fixxpunkt.watson" />
      <package android:name="de.zeit.online" />
      <package android:name="com.guardian" />
      <package android:name="com.github.android" />
      <package android:name="de.spiegel.android.app.spon" />
      <package android:name="org.wikipedia" />
      <package android:name="ch.blick.news" />
      <package android:name="de.tagesschau" />
      <package android:name="de.sueddeutsche" />
      <package android:name="de.sde.mobile" />
      <package android:name="bbc.mobile.news.ww" />
      <package android:name="com.thomsonreuters.reuters" />
      <package android:name="ch.azmedien.az_live_aargau" />
      <package android:name="com.idmedia.android.newsportal" />
      <package android:name="com.washingtonpost.android" />
      <package android:name="ch.swissinfo.android" />
      <package android:name="com.cnn.mobile.android.phone" />
      <package android:name="net.faz.FAZ" />
